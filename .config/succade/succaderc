[DP-0]
command="~/.local/bin/lemonbar -O DP-0"
name = "dp0"
blocks = "desk_dp0 user || mail tasks notes syncthing date"
height = 32
#areas = 0
foreground = "#aaaaaa"
background = "#000000"
line-color = "#555555"
line-width = 2
#font = "RobotoMono Nerd Font Mono Lt:size=16"
font = "CaskaydiaCove Nerd Font Mono:size=10"

