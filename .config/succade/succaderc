[user]
command = "whoami"
label = "\uf007"

[weather]
command = "~/.local/bin/weather.sh"
interval = 60

[memory]
command = "~/.local/bin/memory.sh"
label = "󰍛"
interval = 5
mouse-left = "alacritty --class htop -e htop"

[mail]
command = "echo 1"
label = "\uf01c"
interval = 10
mouse-left = "alacritty --class mutt -e mutt"
mouse-right = "thunderbird"

[tasks]
command = "task count"
label="\uf0a3"
interval = 5
mouse-left="alacritty --class tasks -e taskwarrior-tui"
mouse-right="alacritty --class tasks -e task burndown.daily"

[notes]
command = "echo 1"
label = "\uf249"
interval = 5
mouse-left="alacritty --class notes -e zk edit --interactive --sort=modified-"

[syncthing]
command = "echo 1"
label = "\uf2f1"
mouse-left="syncthing"
interval = 10

[wlan]
command = "~/.local/bin/wlan.sh"
interval = 5
label = "\uf1eb"
mouse-left = wpa_gui

[sound]
label = "S"
command = "echo 1"
mouse-left = "pavucontrol"
interval = 10

[battery]
command = "~/.local/bin/battery.sh"
interval = 5
raw = true
#   mouse-left="alacritty --class powertop -e powertop"

[date]
label = "\uf017"
command = "date +'%Y-%m-%d %H:%M:%S'"
interval = 1
